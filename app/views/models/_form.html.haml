= form_for @model, :html => { :class => 'form-horizontal' } do |f|
  .form-group
    = f.label :brand_id, :class => 'control-label'
    .controls
      = f.select :brand_id,Brand.all.map{|b| [b.name,b.id]}, :class => 'form-control'
      
  .form-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'form-control'
  .form-group
    = f.label :color, :class => 'control-label'
    .controls
      = f.text_field :color, :class => 'form-control'
  .form-group
    = f.label :manufacturer, :class => 'control-label'
    .controls
      = f.text_field :manufacturer, :class => 'form-control'
  .form-group
    = f.label "warranty (in month)", :class => 'control-label'
    .controls
      = f.text_field :warranty, :class => 'form-control'
  .form-group
    = f.label :image, :class => 'control-label'
    .controls
      = f.file_field :image, :class => ''
      
  = f.submit nil, :class => 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), models_path, :class => 'btn btn-default'
