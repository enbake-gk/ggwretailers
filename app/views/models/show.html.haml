- model_class = Model
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:brand_id) + ':'
  %br
  = @model.brand.name
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @model.name
%p
  %strong= model_class.human_attribute_name(:color) + ':'
  %br
  = @model.color
%p
  %strong= model_class.human_attribute_name(:serial_no_location) + ':'
  %br
  = @model.serial_no_location
%p
  %strong= model_class.human_attribute_name(:warranty) + ':'
  %br
  = @model.warranty
%p
  %strong= model_class.human_attribute_name(:image) + ':'
  %br
  =  image_tag(@model.image.thumb)  if @model.image.present? 
%p

= link_to t('.back', :default => t("helpers.links.back")), models_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_model_path(@model), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), model_path(@model), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
