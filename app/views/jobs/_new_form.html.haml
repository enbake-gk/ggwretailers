= form_for @job do |f|
  - if @job.errors.any?
    #error_explanation
      %h2= "#{pluralize(@job.errors.count, "error")} prohibited this job from being saved:"
      %ul
        - @job.errors.full_messages.each do |msg|
          %li= msg
  %br
  %br        
  .field
    = f.label :serial_number
    = f.text_field :serial_number, :value => params[:key], :readonly => true
  .field
    = f.label :warrenty_job
    = f.text_field :warrenty_job, :value => remain_warrenty(params[:key]) == "Yes" ? "Yes" : "No", :readonly => true
  .field
    = f.label :service_notes  
    = f.text_area :service_notes
  .field
    = f.label :claimed if remain_warrenty(params[:key]) == "Yes"
    = f.radio_button :claimed, "Yes" if remain_warrenty(params[:key]) == "Yes"
    = f.label :claimed, "Yes" if remain_warrenty(params[:key]) == "Yes"
    = f.radio_button :claimed, "No" if remain_warrenty(params[:key]) == "Yes"
    = f.label :claimed, "No" if remain_warrenty(params[:key]) == "Yes"
  #claim_amount_id.field
    = f.label :claim_amount
    = f.text_field :claim_amount 
  .field
    = f.label :date_of_job
    = f.date_select :date_of_job
  .actions
    = f.submit 'Save'
