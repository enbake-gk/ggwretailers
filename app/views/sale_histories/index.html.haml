.page-header
  %h1.title Sale Histories
%table.table.table-hover
  %thead
    %tr
      %th Serial no
      %th Brand
      %th Model
      %th Retailer
      %th Selling date
      %th Actions
  %tbody
    - if @sale_histories.present?
      - @sale_histories.each do |sale_history|
        %tr
          %td= link_to sale_history.equipment.try(:serial_number),equipment_path(sale_history.equipment.try(:id))
          %td= link_to sale_history.equipment.brand.try(:name),brand_path(sale_history.equipment.brand.try(:id))
          %td= link_to sale_history.equipment.model.try(:name),model_path(sale_history.equipment.model.try(:id))
          %td= link_to sale_history.buyer.try(:user_name),user_path(sale_history.try(:buyer_id))
          %td= sale_history.selling_date.try(:strftime,'%m-%d-%Y %H:%M %p')
          %td
            = link_to 'Edit', edit_sale_history_path(sale_history),:class => 'btn btn-warning btn-xs'
            = link_to 'Show', sale_history, :class => 'btn btn-primary btn-xs'
            = link_to 'Destroy', sale_history, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-xs btn-danger'
    - else
      %tr
        %td{colspan: "9"} No data available.

%br

= will_paginate @sale_histories, renderer: BootstrapPagination::Rails 

= link_to "Sale to Retailer", new_sale_history_path, :class => 'btn btn-primary'
