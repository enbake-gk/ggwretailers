.page-header
  %h1.title Listing sale histories
%table.table.table-bordered 
  %thead
    %tr
      %th Equipment
      %th Serial no
      %th Brand
      %th Model
      %th Retailer
      %th Selling date
  %tbody
    - if @sale_histories.present?
      - @sale_histories.each do |sale_history|
        %tr
          %td= sale_history.equipment
          %td= sale_history.serial_no
          %td= sale_history.brand
          %td= sale_history.model
          %td= sale_history.customer_id
          %td= sale_history.selling_date
          %td
            = link_to 'Show', sale_history
            = link_to 'Edit', edit_sale_history_path(sale_history)
            = link_to 'Destroy', sale_history, :method => :delete, :data => { :confirm => 'Are you sure?' }
    - else
      %tr
        %td{colspan: "9"} No data available.

%br

= will_paginate @sale_histories, renderer: BootstrapPagination::Rails 

= link_to "Sale to Retailer", new_sale_history_path, :class => 'btn btn-primary'
