%p#notice= notice

- model_class = Part
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:model_id) + ':'
  %br
  = @part.model.name
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @part.name
%p
  %strong= model_class.human_attribute_name(:barcode) + ':'
  %br
  = @part.barcode

= link_to t('.back', :default => t("helpers.links.back")), parts_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_part_path(@part), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), part_path(@part), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
