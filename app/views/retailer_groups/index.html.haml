= search_form_for @search, url: '/retailer_groups' do |f|
  / Retailer group Name Search 
  .form-control-col-sm-4
    = f.label :name_cont, "Retailers Group Search"
    = f.text_field :name_cont
    = actions= f.submit "Search", class: 'btn btn-primary btn-xs'

- model_class = RetailerGroup
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @retailer_groups.each do |retailer_group|
      %tr
        %td= retailer_group.name
        %td=retailer_group.created_at.strftime("%A, %d %b %Y %l:%M %p")
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_retailer_group_path(retailer_group), :class => 'btn btn-default btn-xs'
          = link_to t('.show', :default => t("helpers.links.show")), retailer_group_path(retailer_group), :class => 'btn btn-primary btn-sm'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), retailer_group_path(retailer_group), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_retailer_group_path, :class => 'btn btn-primary'
