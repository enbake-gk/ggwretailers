- model_class = RetailerGroup
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @retailer_group.name


= link_to t('.back', :default => t("helpers.links.back")), retailer_groups_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_retailer_group_path(@retailer_group), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), retailer_group_path(@retailer_group), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
