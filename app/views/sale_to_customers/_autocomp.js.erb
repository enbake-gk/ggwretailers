<script type="text/javascript" >
  
  $(document).ready(function(){
  	$('.search_div').hide();
	  $('input#filter_ckbox').click(function(){
        // If checked
        if ($("#filter_ckbox").is(":checked"))
        {
            //show the hidden div
            $(".search_div").show();
        }
        else
        {
            //otherwise, hide it
            $(".search_div").hide();
        }
      });
    $(document).on("keyup", "#email_customer", function() {
        var email = $(this).val();
      $.getScript('/get_customer_details?email='+email)
    });
     
  });

</script>