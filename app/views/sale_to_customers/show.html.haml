- model_class = SaleHistory
%h1 Customer Details
%p= link_to 'Edit', edit_sale_to_customer_path(@sale_to_customer), :class => 'btn btn-primary', :style => "float: right;  margin-top: -5%" 
.page-header
-if !@sale_to_customer.present?
  %center
    %h2 No Record Found
-else
  %table.table.table-hover
    %thead
      %tr
        %th= model_class.human_attribute_name(:first_name)
        %th= model_class.human_attribute_name(:last_name)
        %th= model_class.human_attribute_name(:dob)
        %th= model_class.human_attribute_name(:email)
        %th= model_class.human_attribute_name(:telephone)
        %th= model_class.human_attribute_name(:mobile)
        %th= model_class.human_attribute_name(:address)
        %th= model_class.human_attribute_name(:town)
        %th= model_class.human_attribute_name(:city)
        %th= model_class.human_attribute_name(:post_code)
    %tbody
      %tr
        %td= @sale_to_customer.first_name
        %td= @sale_to_customer.last_name
        %td= @sale_to_customer.dob.try(:strftime,"%d %b %Y ")
        %td= @sale_to_customer.email
        %td= @sale_to_customer.telephone
        %td= @sale_to_customer.mobile
        %td= @sale_to_customer.address
        %td= @sale_to_customer.town
        %td= @sale_to_customer.city
        %td= @sale_to_customer.post_code
.page-header
  %h1 Registered Item
  %p= link_to 'Add New', new_sale_to_customer_path, :class => 'btn btn-primary', :style => "float: right;  margin-top: -5%" 

-if !@items.present?
  %center
    %h2 No Service History Found
-else
  %table.table.table-hover
    %thead
      %tr
        %th Serial Number
        %th Brand
        %th Model
        %th Colour
        %th Store Name
        %th Date Purchased
        %th Price

    %tbody
      - @items.includes(:brand,:model,:retailer).each do |equipment| 
        %tr
          %td= equipment.serial_number
          %td= link_to equipment.try(:brand).try(:name),brand_path(equipment.brand_id)    
          %td= link_to equipment.try(:model).try(:name),model_path(equipment.model_id)   
          %td= equipment.colour.name if equipment.colour.present? 
          %td= equipment.try(:retailer).try(:contact_person)      
          %td= equipment.purchase_date
          %td= equipment.price      
.page-header
  %h1 Customer Note
%p= @sale_to_customer.post_code  