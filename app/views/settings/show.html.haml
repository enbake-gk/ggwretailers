- model_class = User
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @setting.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @setting.last_name
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @setting.email
%p
  %strong= model_class.human_attribute_name(:role) + ':'
  %br
  = @setting.role?


= link_to t('.back', :default => t("helpers.links.back")), users_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_user_path(@setting), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), setting_path(@setting), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
