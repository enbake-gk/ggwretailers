= search_form_for @search, url: '/equipment' do |f|
  / equipment no Search 
  .form-control-col-sm-4
    = f.label :serial_number_eq, "Serial Number Search"
    = f.text_field :serial_number_eq
    = actions= f.submit "Search", class: 'btn btn-primary btn-xs'

.page-header
  %h1.title Serial Key List
-if !@serial_keys.present?
  %center
    %h2 No Record Found
-else
  %table.table.table-striped
    %thead
      %tr
        %th Serial Number
        %th Model Id
        %th Brand Id
        %th Colour
        %th Bought On
    %tbody
    - @serial_keys.includes(:model,:brand).each do |serial_key| 
      %tr
        %td= serial_key.try(:equipment).try(:serial_number)
        %td= serial_key.equipment.try(:brand).try(:name)    
        %td= serial_key.equipment.try(:model).try(:name)
        %td= Equipment.find_by_serial_number(serial_key.equipment.serial_number).colour.name               
        %td= serial_key.selling_date.try(:strftime,"%A, %d %b %Y %l:%M %p")
      
 

=# link_to 'Create new customer', new_equipment_path, :class => 'btn btn-primary'
