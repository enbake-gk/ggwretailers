= form_for @user, :html => { :class => 'form-horizontal retailer_form_validate' }  do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this retailer from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :first_name, :class => 'control-label'
    .controls
      = f.text_field :first_name, :class => 'form-control'
  .form-group
    = f.label :last_name, :class => 'control-label'
    .controls
      = f.text_field :last_name, :class => 'form-control'
  .form-group
    = f.label :contact_person , "Store Name", :class => 'control-label'
    .controls
      = f.text_field :contact_person, :class => 'form-control'
  .form-group
    = f.label :retailer_name , :class => 'control-label'
    .controls
      = f.text_field :retailer_name, :class => 'form-control'
  .form-group
    = f.label :retailer_group, :class => 'control-label'
    .controls
      = f.select :retailer_group_id,RetailerGroup.all.map{|b| [b.name,b.id]},{ include_blank: true }, :class => 'form-control'
  .form-group
    = f.label :website, :class => 'control-label'
    .controls
      = f.text_field :website, :class => 'form-control'
  .form-group
    = f.label :phone_number , :class => 'control-label'
    .controls
      = f.text_field :phone_number, :class => 'form-control'
  .form-group
    = f.label :email, :class => 'control-label'
    .controls
      = f.text_field :email, :class => 'form-control', :rel=> @user.try(:id)
  = f.submit "Save", :class => 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), retailers_path, :class => 'btn btn-default'

