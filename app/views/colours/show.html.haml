- model_class = Colour
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @colour.name
%p


= link_to t('.back', :default => t("helpers.links.back")), colours_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_colour_path(@colour), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), colour_path(@colour), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
