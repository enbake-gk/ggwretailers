.page-header
  %h2 Brand Details 
%p
  %strong= "Name :  #{@brand.name}"
.page-header
  %h3 Models
-if !@brand.models.present?
  %center
    %h3 No Model Found
-else
  %table.table.table-hover
    %thead
      %tr
        %th Model Name
        %th Serial No. Location
        %th warranty(in months)
        %th Image
    %tbody
      - @brand.models.each do |model|
        %tr
          %td= model.name
          %td= model.serial_no_location
          %td= model.warranty
          %td= image_tag(model.image.thumb) if model.image.present?
= link_to t('.back', :default => t("helpers.links.back")), brands_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_brand_path(@brand), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), brand_path(@brand), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
