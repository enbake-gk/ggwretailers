- model_class = Equipment
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:serial_number) + ':'
  %br
  = @equipment.serial_number
%p
  %strong= model_class.human_attribute_name(:brand_id) + ':'
  %br
  = link_to @equipment.brand.name,brand_path(@equipment.brand.id)
%p
  %strong= model_class.human_attribute_name(:model_id) + ':'
  %br
  = link_to @equipment.model.name,model_path(@equipment.model.id)
= link_to t('.back', :default => t("helpers.links.back")), equipment_index_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_equipment_path(@equipment), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), equipment_path(@equipment), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
