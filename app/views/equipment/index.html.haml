= search_form_for @search, url: '/equipment' do |f|
  / equipment no Search 
  .form-control-col-sm-4
    = f.label :serial_number_eq, "Serial Number Search"
    = f.text_field :serial_number_eq
    = actions= f.submit "Search", class: 'btn btn-primary btn-xs'


- model_class = Equipment
.page-header
  %h1= "Serial Numbers" unless current_user.is_retailer?
  %h1= "Serial Numbers" unless !current_user.is_retailer?
-if !@equipment.present?
  %center
    %h2 No Record Found
-else
  %table.table.table-hover
    %thead
      %tr
        %th= model_class.human_attribute_name(:serial_number)
        %th= model_class.human_attribute_name(:brand_id)
        %th= model_class.human_attribute_name(:model_id)
        %th= model_class.human_attribute_name(:colour_id)
        %th=t '.actions', :default => t("helpers.actions") unless current_user.is_retailer?
    %tbody
      - @equipment.includes(:brand,:model).each do |equipment| 
        %tr
          %td= equipment.serial_number
          %td= link_to equipment.try(:brand).try(:name),brand_path(equipment.brand_id)    
          %td= link_to equipment.try(:model).try(:name),model_path(equipment.model_id)   
          %td= equipment.colour.name if equipment.colour.present?       
          %td
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_equipment_path(equipment), :class => 'btn btn-warning btn-xs' unless current_user.is_retailer?
            = link_to t('.show', :default => t("helpers.links.show")), equipment_path(equipment), :class => 'btn btn-primary btn-xs' unless current_user.is_retailer?
            = link_to t('.destroy', :default => t("helpers.links.destroy")), equipment_path(equipment), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger' unless current_user.is_retailer?
= will_paginate @equipment, renderer: BootstrapPagination::Rails  
= link_to t('.new', :default => t("helpers.links.new")), new_equipment_path, :class => 'btn btn-primary' unless current_user.is_retailer?
/%h6 choose only c.s.v or x.l.s file
= form_for @product_import,:url=>import_equipment_index_path do |f|
  - if @product_import.errors.any?
    #error_explanation
      %h2
        = pluralize(@product_import.errors.count, "error")
        prohibited this import from completing:
      %ul
        - @product_import.errors.full_messages.each do |msg|
          %li= msg
  %br        
  .field
    = f.file_field :file, :required => true unless current_user.is_retailer?
    %h6= "choose only c.s.v or x.l.s file"  unless current_user.is_retailer?
  .buttons= f.submit "Import" unless current_user.is_retailer?

