- model_class = Accessory
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @accessory.name
%p
  %strong= model_class.human_attribute_name(:url) + ':'
  %br
  = link_to @accessory.url
%p
  %strong= model_class.human_attribute_name(:price) + ':'
  %br
  = @accessory.price
%p
  


= link_to t('.back', :default => t("helpers.links.back")), accessories_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_accessory_path(@accessory), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), accessory_path(@accessory), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
